<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpTheNext" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <item name="colorPrimary">@color/celadon_blue</item>
        <item name="colorSecondary">@color/rose_dust</item>
        <item name="colorOnPrimary">@color/baby_powder</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorControlActivated">@color/rose_dust</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:dropDownListViewStyle">@style/menu</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/baby_powder</item> -->

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreenlogo</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.HelpTheNext</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:background">@color/rose_dust</item>
        <item name="android:textColorPrimary">@color/baby_powder</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/baby_powder</item>
        <item name="backgroundTint">@color/rose_dust</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/eerie_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Cursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/rose_dust</item>
    </style>

    <style name="CustomTextInputLayoutPassword" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/rosy_brown</item>
        <item name="boxStrokeColor">@color/rose_dust</item>
        <item name="startIconDrawable">@drawable/ic_password_key</item>
        <item name="startIconContentDescription">@string/password_key_icon</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/celadon_blue</item>
        <item name="endIconContentDescription">@string/show_hide_password_icon</item>
        <item name="android:theme">@style/Cursor</item>
        <item name="errorEnabled">true</item>
        <item name="errorContentDescription">@string/error_icon</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/rosy_brown</item>
        <item name="boxStrokeColor">@color/rose_dust</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:theme">@style/Cursor</item>
    </style>

    <style name="CustomAutoCompleteTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/rose_dust</item>
        <item name="hintTextColor">@color/rosy_brown</item>
        <item name="endIconTint">@color/celadon_blue</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menu" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>